<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<br>
<br>

<h1>Comments</h1>

<% @post.comments.each do |comment| %>
    <strong>Content:</strong>
    <%= comment.content %> |
    <strong>Username:</strong> 
    <%= comment.username %> |
    <%= link_to like_post_comment_path(@post, comment), method: :patch do %> 
      <i class="fa fa-thumbs-o-up"></i>
    <% end %>
    <br>
    <% if comment.like_count.present? %>
      <%= comment.like_count %> people liked this comment
    <% end %>
    <br>
<% end %>

<br>
<br>

<%= link_to 'New Comment', new_post_comment_path(@post) %> | 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
